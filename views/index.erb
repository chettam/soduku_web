<div id ="soduku">
	<div class="left">
		<form action='/solution' method='get'>
    	<button class="button" >Show Solution !</button>
    </form>
    <form action='/new_game?level=easy' method='get'>
      <button class="button" >New easy game !</button>
    </form>
    <form action='/new_game?level=hard' method='get'>
      <button class="button" >New hard game !</button>
    </form>
  </div>
	<form action="/" method="post">
		<div class= "grid">
			<% 3.times do |row| %>
				<div class="row">
					<%3.times do |box| %>
						<div class="box">
							<% 3.times do |cell_row| %>
								<div class="cell-row">
									<% 3.times do |cell| %>
									<%= partial :cell, :locals => {:cell_index => row * 27 + box * 3 + cell_row * 9 + cell} %>
									<% end %>
								</div>
							<% end %>
						</div>
					<% end %>
				</div>
			<% end %>
		</div>
		<div class ="right">
			<button class="button">Check !</button>
	</div>
	</form>
</div>
